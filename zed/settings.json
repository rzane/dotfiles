// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Andromeda",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "tab_size": 2,
  "ui_font_size": 17,
  "buffer_font_size": 17,
  "buffer_font_family": "Dank Mono",
  "wrap_guides": [100, 140],
  "file_types": {
    "Ruby": ["rbi"]
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "sorbet", "!rubocop", "!solargraph"],
      "formatter": "language_server",
      "format_on_save": "on"
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "experimentalFeaturesEnabled": true,
        "formatter": "auto" // or "rubocop"
      }
    }
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  "terminal": {
    "dock": "right",
    "default_width": 800
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/vendor/gems"
  ]
}
